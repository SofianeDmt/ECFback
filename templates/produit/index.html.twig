{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
    {{ parent() }}

    <div style="height: 1000px" class="container">
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div style="text-align: center" class="card text-black">
                        <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
                        <img src="{{ produit.image }}" alt=""
                             class="card-img-top" alt="Apple Computer" height="350"/>
                        <div class="card-body">
                            <div class="text-center">
                                <h5 class="card-title">{{ produit.nom }}</h5>
                                <p class="text-muted mb-4">Reference : {{ produit.reference }}</p>
                                <p class="text-muted mb-4">Prix : {{ produit.tarif }}â‚¬</p>
                            </div>
                            <div>
                                <div class="d-flex justify-content-between">
                                    <p>{{ produit.descriptionLongue }}</p>
                                </div>
                            </div>

                            <form method="post" action="">
                                <div class="row my-3">
                                    <div class="col-3">
                                        <input type="number" name="quantite" class="form-control" id="quantite" value="1" min="0" max="99" />
                                        <input type="hidden" name="produit" value="{{ produit.id }}"/>
                                    </div>
                                    <div class="col mt-3">
                                        <input  type="submit" value="Ajouter au panier" name="ajout" class="btn btn-success" />
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>
{% endblock %}
